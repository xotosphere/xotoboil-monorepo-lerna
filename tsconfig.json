{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "declaration": true,
    "sourceMap": true,   
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "types": ["vite/client", "jest"],
    "paths": {
      "@xotoboil-monorepo-lerna/ui": ["packages/ui/src/main.ts"]
    }
  },
  "include": [
    "/config/*.ts",
    "/**/src/**/*.ts",
    "/**/src/**/*.js",
    "/**/src/**/*.vue",
    "/cypress/**/*.js",
    "./node_modules/jest", 
  ]
}